<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="600.0" 
            xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.111" 
            fx:controller="net.kiranatos.kanjipainter.FXMLController">
    <children>
      <BorderPane prefHeight="510.0" prefWidth="571.0" 
                  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" 
                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         
          
         <top>
            <MenuBar BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </top>
         
         
         <center>
            <Canvas fx:id="painterCanvas" height="500.0" width="500.0" BorderPane.alignment="CENTER" />
         </center>
         
         
      </BorderPane>
    </children>
</AnchorPane>
